<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:smartdost="http://schemas.android.com/apk/res/com.samsung.ssc"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

     
    
      <com.samsung.ssc.CustomUI.SSCActionBar
        android:id="@+id/include1"
        smartdost:actionTitle="KAS Details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/actionButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="1" >

        <Button
            android:id="@+id/exit"
            style="@style/button_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight=".5"
            android:padding="6dp"
            android:text="@string/exit" />

        <Button
            android:id="@+id/viewMore"
            style="@style/button_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight=".5"
            android:padding="6dp"
            android:text="@string/view_more" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/actionButtonLayout"
        android:layout_below="@+id/titlenotification"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bodynotification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:gravity="left|top"
                android:inputType="textMultiLine"
                android:textColor="#000000"
                android:textSize="16dp" >
            </TextView>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/titlenotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/include1"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout><!-- From: file:/F:/SC_TFS/SalesCatalyst%20Android/Dev/SC_STUDIO/app/src/main/res/layout/notification_view1.xml -->