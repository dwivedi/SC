<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/white"
    android:orientation="vertical"
   
     >

    <AutoCompleteTextView
        android:id="@+id/city_others"
        style="@style/edit_field_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/city"
        android:layout_marginTop="10dp"
        android:imeOptions="actionNext"
        android:singleLine="true" />

    <AutoCompleteTextView
        android:id="@+id/dealer_others"
        style="@style/edit_field_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dealer"
        android:imeOptions="actionDone"
        android:singleLine="true" 
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/submit_others"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonblue"
            android:gravity="center"
            android:text="@string/submit"
         android:textColor="@drawable/button_text_color_selector"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout><!-- From: file:/F:/SC_TFS/SalesCatalyst%20Android/Dev/SC_STUDIO/app/src/main/res/layout/dealer_selection.xml -->