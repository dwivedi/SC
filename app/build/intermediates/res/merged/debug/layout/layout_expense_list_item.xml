<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/expense_type_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:layout_widthPercent="33%"
            android:paddingLeft="@dimen/margin_20"
            android:paddingStart="@dimen/margin_20"
            android:singleLine="true"

            android:textColor="@color/ems_item_textcolor"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/pending_with_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_toEndOf="@+id/expense_type_textview"
            android:layout_toRightOf="@+id/expense_type_textview"
            app:layout_widthPercent="33%"
            android:singleLine="true"

            android:textColor="@color/ems_item_textcolor"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/submitted_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_toEndOf="@+id/pending_with_textview"
            android:layout_toLeftOf="@+id/expense_approval_status_textview"
            android:layout_toRightOf="@+id/pending_with_textview"
            android:layout_toStartOf="@+id/expense_approval_status_textview"
            app:layout_widthPercent="33%"
            android:gravity="end"
            android:singleLine="true"

            android:textColor="@color/ems_divider_and_date_color"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/expense_approval_status_textview"
            android:layout_width="@dimen/margin_10"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/margin_15"
            android:paddingTop="@dimen/margin_15"
            android:singleLine="true" />
    </android.support.percent.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/ems_divider_and_date_color" />

</LinearLayout><!-- From: file:/F:/SC_TFS/SalesCatalyst%20Android/Dev/SC_STUDIO/app/src/main/res/layout/layout_expense_list_item.xml -->