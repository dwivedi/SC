<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:stretchColumns="0,1" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.1"
             >

            <TextView
                android:id="@+id/sr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_weight=".1"
                android:textColor="@color/text_color"
                android:textStyle="normal"
                
                />

            <TextView
                android:id="@+id/product"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_weight=".4"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                  android:maxLines="2"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/quantity"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_weight=".1"
                android:textColor="@color/text_color"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/value"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_weight=".3"
                android:textColor="@color/text_color"
                android:textStyle="normal"
                android:maxLines="2"
              
                
                 />

            <Button
                android:id="@+id/edit"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_weight=".1"
                android:background="@drawable/edit_pencil" />

            <Button
                android:id="@+id/close"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_marginLeft="3dp" android:layout_marginRight="3dp"
                android:layout_weight=".1"
                android:background="@drawable/close_icon" />
        </TableRow>
    </TableLayout>

</LinearLayout><!-- From: file:/F:/SC_TFS/SalesCatalyst%20Android/Dev/SC_STUDIO/app/src/main/res/layout/bookorderadditem.xml -->