<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:smartdost="http://schemas.android.com/apk/res/com.samsung.ssc"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="2"
    
     >

    <com.samsung.ssc.CustomUI.SSCTextView
        android:id="@+id/tv_title_notificationListItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_smaller"
        smartdost:fontType="roboto_light" 
        android:singleLine="true"
        
        />

    <com.samsung.ssc.CustomUI.SSCTextView
        android:id="@+id/tv_time_notificationListItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_smaller"
        smartdost:fontType="roboto_light" 
        android:singleLine="true"
        android:gravity="right"
        />

</LinearLayout><!-- From: file:/F:/SC_TFS/SalesCatalyst%20Android/Dev/SC_STUDIO/app/src/main/res/layout/notifications_list_item1.xml -->