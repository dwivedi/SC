<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".LMS.LMSLeaveListFragment">


    <com.ns.developer.tagview.widget.TagCloudLinkView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tagCloudContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:gravity="center_horizontal|center_vertical"
        android:padding="4dp"
        app:deletableTextColor="#ff9acd32"
        app:deletableTextSize="8sp"
        app:isDeletable="true"
        app:tagLayoutColor="@color/colorPrimary"
        app:tagTextColor="#ffffff"
        app:tagTextSize="8sp" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/activity_main_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tagCloudContainer">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewLeaveList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="12dp"
            android:paddingEnd="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp" />


    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>

