<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:smartdost="http://schemas.android.com/apk/res/com.samsung.ssc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

<!--    <com.samsung.ssc.CustomUI.SSCActionBar
        android:id="@+id/sDActionBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        smartdost:actionTitle="Create MOM" />
    -->

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar"
        android:elevation="4dp">

        <android.support.v7.widget.SearchView
            android:id="@+id/searchViewMOM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:imeOptions="actionSearch|flagNoExtractUi"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            />

    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
               android:onClick="onSearchMOMClick"
               android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:background="@drawable/blue_button_background"
            android:src="@android:drawable/ic_search_category_default" />

        <EditText
            android:id="@+id/etMOMSearchInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button1"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_color"
         	android:singleLine="true"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </RelativeLayout>

    <ListView
        android:id="@+id/lvMOMSearch"
         android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout1"
        android:layout_centerHorizontal="true" >

    </ListView>

</RelativeLayout>