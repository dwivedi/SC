<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/sd_dialog_background" >

    <ListView
        android:id="@+id/lv_syncStatusListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_ok_syncStatusList"
        android:layout_alignParentTop="true"
        
         >

    </ListView>

    <Button
        android:id="@+id/bt_ok_syncStatusList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttonblue_rectangle"
        android:padding="10dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textColor="@color/button_text_color_selector_from_color_floder"
        android:text="@string/ok"></Button>

</RelativeLayout>