<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statusLogRootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/textViewStatusLogDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Date"
        android:textSize="11dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/ems_divider_and_date_color"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textViewStatusLogCreatedBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewStatusLogDate"
        android:text="Dwivedi"
        android:drawablePadding="6dp"
        android:textSize="14dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/textViewStatusLogRemark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textViewStatusLogCreatedBy"
        android:text="Approval Text"
        android:layout_marginLeft="4dp"
        android:textSize="13dp"
        android:drawablePadding="6dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/ems_divider_and_date_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_below="@+id/textViewStatusLogRemark"
        android:background="@color/ems_divider_and_date_color"></LinearLayout>
</RelativeLayout>