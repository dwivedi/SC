<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/shado_bg">
    


    <Button
        android:id="@+id/viewLeaveStatusBar"
        android:layout_width="20dp"
        android:layout_height="match_parent"
         android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_red_light"
        android:layout_alignBottom="@+id/relativeLayout2"
        android:layout_alignTop="@+id/relativeLayout2"
         />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/viewLeaveStatusBar"
        android:layout_toStartOf="@id/viewLeaveStatusBar">

        <TextView
            android:id="@+id/textViewLeaveTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text="Leave request for Holi"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimary" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewLeaveTitle"
            android:layout_toLeftOf="@+id/viewLeaveRequestStatusBar"
            android:layout_toStartOf="@+id/viewLeaveRequestStatusBar"
            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textViewLMSStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rejected By"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/textViewLMSActionUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:layout_alignParentTop="true"
                android:text="Ashish Dwivedi"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/textViewLMSSupport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewLMSStatusText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewLMSStatusText"
                android:text="No of days"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/textViewLMSNumberOfDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textViewLMSActionUserName"
                android:text="4 Days"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_color" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textViewLMSLeaveType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout"
            android:background="@drawable/lms_list_blue_corner"
            android:paddingLeft="10dp"
            android:paddingRight="40dp"
            android:paddingTop="40dp"

            android:text="CL"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>