<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tv_feedback_log_deatils_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:text="Header"
        android:drawableRight="@drawable/collapse"
        android:textColor="@android:color/black"
        android:background="@drawable/fms_table_row"
         />

    <LinearLayout
        android:id="@+id/layout_container_feedback_log_deatils"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_feedback_log_deatils_header"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>